<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#131313"
    android:id="@+id/snakbar_layout"
    tools:context="com.example.user.myapplication.AwardResult.AddLinkActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#131313"
            android:shadowColor="#ff464646"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:gravity="center"
            android:text="영상추가"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/back"
            android:onClick="onBtnMenu" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d0d0d"
        android:shadowColor="#ff464646">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:layout_marginLeft="16dp"
            android:hint="유투브 검색어 입력창"
            android:background="@null"
            android:textColorHint="#73ffffff"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:id="@+id/editSearch" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#0d0d0d"
            android:text="검색"
            android:textColor="#db9a7a"
            android:id="@+id/btnSearch" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#12ffffff"
        android:dividerHeight="0.5dp"
        android:id="@+id/list_search" />


</LinearLayout>
